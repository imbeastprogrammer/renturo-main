<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <!-- API Tests -->
        <testsuite name="Api">
            <directory suffix="Test.php">./tests/Api</directory>
        </testsuite>
        <testsuite name="Api_Central">
            <directory suffix="Test.php">./tests/Api/Central</directory>
        </testsuite>
        <testsuite name="Api_Tenant">
            <directory suffix="Test.php">./tests/Api/Tenant</directory>
        </testsuite>

        <!-- Web Tests -->
        <testsuite name="Web">
            <directory suffix="Test.php">./tests/Web</directory>
        </testsuite>
        <testsuite name="Web_Central">
            <directory suffix="Test.php">./tests/Web/Central</directory>
        </testsuite>
        <testsuite name="Web_Tenant">
            <directory suffix="Test.php">./tests/Web/Tenant</directory>
        </testsuite>

        <!-- Legacy Test Suites -->
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./app</directory>
        </include>
    </coverage>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <!-- <env name="DB_CONNECTION" value="sqlite"/> -->
        <!-- <env name="DB_DATABASE" value=":memory:"/> -->
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
